@model IEnumerable<DAL.Product>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" asp-controller="Product">Create</a>
</p>
<table class="table"> 
    <tr>
        <th>Product Id</th>
        <th>Name</th>
        <th>Unit Price</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.UnitPrice</td>
            <td>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.ProductId">Edit</a>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId">Delete</a>

                @*@Html.ActionLink("Edit","Edit", new{id = item.ProductId})*@
            </td>
        </tr>
    }


</table>


